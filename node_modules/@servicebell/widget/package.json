{
  "name": "@servicebell/widget",
  "version": "0.1.1",
  "license": "MIT",
  "main": "lib/index.js",
  "module": "es/index.js",
  "types": "types/index.d.ts",
  "files": [
    "es",
    "lib",
    "types",
    "README.md"
  ],
  "scripts": {
    "dev": "rollup -cw",
    "test": "jest",
    "build": "yarn run build:types && yarn run build:module",
    "build:types": "tsc --project tsconfig.build.json --declaration --emitDeclarationOnly --declarationDir types",
    "build:module": "rollup -c",
    "lint": "yarn eslint . --ext .ts,.tsx",
    "lint:fix": "yarn lint --fix",
    "format": "prettier --config ./.prettierrc.json \"**/*.{js,jsx,ts,tsx,css,less,md,json}\"",
    "format:fix": "yarn run format --write",
    "prepublishOnly": "yarn build",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "./**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --config ./.prettierrc.json  --write"
    ],
    "./**/*.{js,jsx,ts,tsx,css,less,md,json}": [
      "prettier --config ./.prettierrc.json  --write"
    ]
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.2.0",
    "@types/jest": "^27.4.0",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^27.4.7",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.1",
    "rollup": "^2.39.0",
    "ts-jest": "^27.1.2",
    "tslib": "^2.1.0",
    "typescript": "4.4.3"
  },
  "keywords": [
    "service",
    "bell",
    "widget",
    "customer",
    "video"
  ]
}
